<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_12">

    <com.reversecoder.timelineview.TimeLineView
        android:id="@+id/timeline_order_detail_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_3"
        android:orientation="vertical"
        local:zoneType="ZONE_TYPE_ITEM">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_detail_status_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="@color/white80"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_order_detail_status_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>

    </com.reversecoder.timelineview.TimeLineView>

    <LinearLayout
        android:id="@+id/ll_completed"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_circle_border_accent_bg_white"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_stepper_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

    </LinearLayout>

</RelativeLayout>