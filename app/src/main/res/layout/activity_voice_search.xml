<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <include layout="@layout/toolbar_base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_grey_800"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_voice_search_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_border_rectangle"
            app:cardCornerRadius="0dp"
            card_view:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_grey_800">

                <include layout="@layout/layout_expandable_voice_search_category" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_15"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_translated_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:gravity="center"
                    android:text="@string/view_tap_mic_icon_from_below_and_say_whatever_you_want_to_search"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_search_progress_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <net.gotev.speech.ui.SpeechProgressView
                        android:id="@+id/speech_progress_view"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_voice_search"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/selector_voice_search"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>