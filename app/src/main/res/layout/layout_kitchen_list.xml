<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey_800">

    <com.jude.easyrecyclerview.waveswiperefresh.WaveSwipeRefreshRecyclerView
        android:id="@+id/rv_kitchen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_grey_800"
        android:visibility="visible"
        app:layout_progress="@layout/view_progress" />

    <RelativeLayout
        android:id="@+id/rl_suggestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_empty_box"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/vector_empty_box_fill_white" />

        <TextView
            android:id="@+id/tv_sggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_empty_box"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/view_please_select_area_and_cuisine_from_dropdown"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>