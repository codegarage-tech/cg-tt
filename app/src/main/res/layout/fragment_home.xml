                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    app:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150"
                        android:background="@drawable/shape_rectangle_border_primary_bg_grey"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_10"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="@dimen/dp_80"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:background="@drawable/vector_dish_white"
                                android:scaleType="fitXY" />

                            <Button
                                android:id="@+id/btn_explore_now_cuisine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/selector_round_border_white_bg_transparent"
                                android:padding="@dimen/dp_10"
                                android:text="@string/view_explore_now"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_16"
                                app:font="@{`canaro_extra_bold`}" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
