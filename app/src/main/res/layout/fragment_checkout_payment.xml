<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_grey_800"
        android:gravity="top"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_grey_800">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_10"
                android:background="@color/color_grey_800"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_promo_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/shape_rectangle_border_primary_bg_grey"
                    app:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_grey_800">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/shape_rectangle_border_primary_bg_grey"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".20"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:background="@drawable/vector_promo_code_white" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".60"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:text="@string/view_apply_promo_code"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_18" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".20"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/iv_promo_code_accepted"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/shape_rectangle_border_primary_bg_grey"
                    app:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_grey_800">

                        <com.reversecoder.library.segmentradiogroup.SegmentedRadioGroup
                            android:id="@+id/srg_payment_type"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            segmentedgroup:sc_border_width="1dp"
                            segmentedgroup:sc_corner_radius="0dp"
                            segmentedgroup:sc_tint_color="@color/colorPrimaryDark">

                            <RadioButton
                                android:id="@+id/srg_rbtn_instant_payment"
                                style="@style/SegmentedRadioButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".5"
                                android:checked="true"
                                android:text="@string/view_instant_payment" />

                            <RadioButton
                                android:id="@+id/srg_rbtn_payment_on_delivery"
                                style="@style/SegmentedRadioButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".5"
                                android:text="@string/view_payment_on_delivery" />

                        </com.reversecoder.library.segmentradiogroup.SegmentedRadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_70"
                            android:layout_below="@+id/srg_payment_type"
                            android:background="@drawable/shape_rectangle_border_primary_bg_grey"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_payment_type_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp_10"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_16" />

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="@drawable/shape_rectangle_border_primary_bg_grey"
                    app:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_rectangle_border_primary_bg_grey"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_5">

                            <include layout="@layout/layout_calculation" />

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</layout>