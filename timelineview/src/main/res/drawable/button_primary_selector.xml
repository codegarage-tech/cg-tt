<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <gradient android:angle="0" android:endColor="#006DCC" android:startColor="#04C" /><!--
            <stroke
                android:width="1dp"
                android:color="#04C" /> -->
            <stroke android:width="1dp" android:color="#444" />
            <corners android:radius="0dp" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <gradient android:angle="0" android:endColor="#04C" android:startColor="#006DCC" />
            <stroke android:width="0dp" android:color="#04C" />
            <corners android:radius="0dp" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>
</selector>